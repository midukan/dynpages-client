// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "Ionic Container",
	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "ionic",
	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	// "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"workspaceFolder": "/home/node/dynpages-client",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
			"plugins": "git git-flow F-Sy-H zsh-autosuggestions zsh-completions",
			"omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-completions https://github.com/zsh-users/zsh-syntax-highlighting"
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],
	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	// "shutdownAction": "none",
	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"humao.rest-client",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"aaron-bond.better-comments",
				"albymor.increment-selection",
				"amazonwebservices.aws-toolkit-vscode",
				"angular.ng-template",
				"chaliy.handlebars-preview",
				"christian-kohler.npm-intellisense",
				"cweijan.vscode-office",
				"danielsanmedium.dscodegpt",
				"danielsanmedium.dscodegpt",
				"dbaeumer.vscode-eslint",
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"eamodio.gitlens",
				"ecmel.vscode-html-css",
				"editorconfig.editorconfig",
				"erikphansen.vscode-toggle-column-selection",
				"esbenp.prettier-vscode",
				"esbenp.prettier-vscode",
				"esbenp.prettier-vscode",
				"exodiusstudios.comment-anchors",
				"extensions.json",
				"gencer.html-slim-scss-css-class-completion",
				"github.copilot",
				"github.copilot",
				"github.vscode-pull-request-github",
				"humao.rest-client",
				"ionic.ionic",
				"ionutvmi.path-autocomplete",
				"ivangrigorov.openaicodehelper",
				"jasonnutter.search-node-modules",
				"lottiefiles.vscode-lottie",
				"mrmlnc.vscode-scss",
				"ms-azuretools.vscode-docker",
				"ms-ceintl.vscode-language-pack-pt-br",
				"ms-vsliveshare.vsliveshare",
				"natizyskunk.sftp",
				"natizyskunk.sftp",
				"rambit.highlight-counter",
				"rbbit.typescript-hero",
				"rvest.vs-code-prettier-eslint",
				"sibiraj-s.vscode-scss-formatter",
				"streetsidesoftware.code-spell-checker",
				"streetsidesoftware.code-spell-checker-portuguese-brazilian",
				"syler.sass-indented",
				"tabnine.tabnine-vscode",
				"tabnine.tabnine-vscode",
				"tobermory.es6-string-html",
				"tomblind.scm-buttons-vscode",
				"tomoki1207.pdf",
				"tuur29.lottie-viewer",
				"uctakeoff.vscode-counter",
				"wakatime.vscode-wakatime",
				"wix.vscode-import-cost",
				"zignd.html-css-class-completion"
			]
		}
	}
	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}